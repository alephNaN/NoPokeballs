extends ../base.jade

block h2
  h2 Pokedex
  
block content

  div.container
    each row in pokemons
      div.row
        each pokemon in row
          a(href='')
            div.col-xs-18.col-sm-4.col-md-3
              div.productbox
               div.imgthumb.img-responsive
                 img(src=pokemon.imageUrl || "http://lorempixel.com/250/250/business/?ab=1df")
               div.caption
                 h5= pokemon.name
                 span.btn.btn-default.btn-xs.pull-right= '#' + pokemon.number
                 each pokemontype in pokemon.types
                   span.btn.btn-info.btn-xs= pokemontype

  if !pokemons.length
    p No Pokemon Found

  if nextPageToken
    nav
      ul.pager
        li
          a(href="?pageToken=#{encodeURIComponent(nextPageToken)}") More
