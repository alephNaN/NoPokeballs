extends ../base.jade

// [START form]
block content
  h3 #{action} pokemon
  form(method="POST", enctype="multipart/form-data")
    .form-group
      label(for="name") Name
      input.form-control(type="text", name="name", id="name", value=pokemon.name)
    .form-group
      label(for="number") Number
      input.form-control(type="number", name="number", id="number", value=pokemon.number)
    .form-group
      label(for="description") Description
      input.form-control(type="text", name="description", id="description", value=pokemon.description)
    .form-group
      label(for="type") Type
      input.form-control(type="text", name="type", id="type", value=pokemon.type)
    .form-group
      label(for="image") Image
      input.form-control(type="file", name="image", id="image")
    .form-group.hidden
      label(for="imageUrl") Cover Image URL
      input.form-control(type="text", name="imageUrl", id="imageUrl", value=pokemon.imageUrl)
    button.btn.btn-success(type="submit") Save
// [END form]